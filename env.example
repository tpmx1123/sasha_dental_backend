# Server Configuration
PORT=5000
NODE_ENV=development

# MongoDB Configuration
# For local MongoDB: mongodb://localhost:27017/dental_db
# For MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/dental_db
MONGODB_URI=mongodb://localhost:27017/dental_db

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3002

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_change_this_in_production
JWT_EXPIRE=7d

# Other Configuration
BCRYPT_ROUNDS=10

# Email Configuration
# For Gmail: Use 'gmail' as EMAIL_SERVICE, or use SMTP settings below
EMAIL_SERVICE=gmail
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password
EMAIL_FROM_NAME=Sasha Smiles
ADMIN_EMAIL=admin@example.com

# SMTP Configuration (Alternative to Gmail service)
# Uncomment and configure if not using Gmail service
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_SECURE=false

